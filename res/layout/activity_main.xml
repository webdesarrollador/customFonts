<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.webdesarrollador.customfont.MainActivity">

    <TextView
        android:text="Hola Mundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoFuente"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.webdesarrollador.customfont.CustomTexto
        android:id="@+id/textoFuente5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Mundo"
        android:layout_below="@+id/textoFuente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <com.webdesarrollador.customfont.CustomTexto2
        android:id="@+id/textoFuente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Mundo!"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@+id/textoFuente5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <com.webdesarrollador.customfont.CustomFontView
        android:id="@+id/textoFuente4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuente Montserrat bold"
        android:textSize="16sp"
        app:fuente="montserrat"
        android:textStyle="bold"
        android:layout_below="@+id/textoFuente2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <com.webdesarrollador.customfont.CustomFontView
        android:id="@+id/textoFuente3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuente Raleway italic"
        android:textSize="16sp"
        app:fuente="raleway"
        android:textStyle="italic"
        android:layout_below="@+id/textoFuente4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <com.webdesarrollador.customfont.CustomFontButton
        android:text="Button Raleway italic"
        app:fuente="raleway"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignTop="@+id/textoFuente3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

</RelativeLayout>
